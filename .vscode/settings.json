{
  "[css]": {
    // "editor.defaultFormatter": "esbenp.prettier-vscode", // broken currently :(
    "editor.defaultFormatter": "vscode.css-language-features",
    "editor.formatOnSave": true,
    "files.insertFinalNewline": true,
  },
  "[typescript]": {
    "editor.defaultFormatter": "denoland.vscode-deno",
    "editor.formatOnSave": true,
  },
  "[javascript]": {
    "editor.formatOnSave": false,
  },
  "css.format.braceStyle": "collapse",
  "css.format.newlineBetweenRules": false,
  "css.format.newlineBetweenSelectors": false,
  "css.validate": false, // use stylelint instead
  "deno.enable": true,
  "deno.lint": true,
  "deno.unstable": false,
  "stylelint.enable": true,
  "typescript.tsdk": "node_modules/typescript/lib"
}