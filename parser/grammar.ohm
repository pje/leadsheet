    | "Â°"
    | "-"
    | "â»"
    | caseInsensitive<"Ã¸">

  extent =
    | thirteen
    | eleven
    | nine
    | seven
    | six_and_nine
    | six
    | five
    | four
    | three
    | two

  thirteen = | "13" | "Â¹Â³"
