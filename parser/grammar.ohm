// Defines a grammar for Jazz/Pop Chord notation
Chord {
  Chord = root flavor

  root = noteLetter accidental?

  flavor = quality? extent? alteration*

  noteLetter =
    | caseInsensitive<"A">
    | "B"
    | caseInsensitive<"C">
    | caseInsensitive<"D">
    | caseInsensitive<"E">
    | caseInsensitive<"F">
    | caseInsensitive<"G">

  accidental =
