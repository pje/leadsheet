{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Leadsheet",
  "patterns": [
    {
      "include": "#comment"
    },
    {
      "include": "#barline"
    },
    {
      "include": "#chord"
    },
    {
      "include": "#metadata"
    }
  ],
  "repository": {
    "barline": {
      "patterns": [
        {
          "name": "constant.other.leadsheet",
          "match": ":?\\d?x?\\|{1,2}\\d?x?:?"
        }
      ]
    },
    "chord": {
      "patterns": [
        {
          "name": "variable.other.leadsheet",
          "match": "(?<!\\w)(?:N\\.C\\.|NC)(?<!\\w)"
        },
        {
          "name": "variable.other.leadsheet",
          "match": "(?:[%/]|(?:[A-G][A-Za-z1-9#bâ™¯â™­ð„«ð„ªâ™®Î”\\+âºoÂ°\\-â»Ã¸â¹â·â¶âµâ´Â²Â³Â¹/\\(\\)]*))"
        }
      ]
    },
    "comment": {
      "patterns": [
        {
          "name": "comment.line.double-slash.leadsheet",
          "match": "//.*$\n?"
        }
      ]
    },
    "metadata": {
      "patterns": [
        {
          "match": "(title|artist|year|key|sig):\\s*(.*)$",
          "captures": {
            "1": {
              "name": "keyword.other.leadsheet"
            },
            "2": {
              "name": "string.other.leadsheet"
            }
          }
        }
      ]
    }
  },
  "scopeName": "source.leadsheet"
}
