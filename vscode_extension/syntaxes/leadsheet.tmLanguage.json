{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Leadsheet",
  "patterns": [
    {
      "include": "#chord"
    },
    {
      "include": "#barline"
    },
    {
      "include": "#comment"
    },
    {
      "include": "#metadata"
    }
  ],
  "repository": {
    "chord": {
      "patterns": [
        {
          "name": "variable.other.leadsheet",
          "match": "\\b[A-G][A-Za-z1-9#b♯♭𝄫𝄪♮Δ\\+⁺o°\\-⁻ø⁹⁷⁶⁵⁴²³¹/\\(\\)]*\\b"
        },
        {
          "name": "variable.other.leadsheet",
          "match": "%"
        }
      ]
    },
    "barline": {
      "patterns": [
        {
          "name": "constant.other.leadsheet",
          "match": ":?[12]?\\|{1,2}[12]?:?"
        }
      ]
    },
    "comment": {
      "patterns": [
        {
          "name": "comment.line.double-slash.leadsheet",
          "match": "//.*$\n?"
        }
      ]
    },
    "metadata": {
      "patterns": [
        {
          "match": "(title|artist|year|key|sig):\\s*(.*)$",
          "captures": {
            "1": {
              "name": "keyword.other.leadsheet"
            },
            "2": {
              "name": "string.other.leadsheet"
            }
          }
        }
      ]
    }
  },
  "scopeName": "source.leadsheet"
}
